<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
     <div class="flex">
        <div class="h-screen w-1/4 bg-pink-500">
            <h1 class="text-[#b6ffb6] text-2xl px-2 py-3"><%=user.username%></h1>
            <a href="/createcontact" class="text-[#b6ffb6] text-sm">Create Contact</a>
            <a href="/logout" class="text-[#b6ffb6] text-sm">Logout</a>
        </div>
        <div class="h-screen w-3/4 bg-white">
            <%user.contacts.forEach(function(contact){%>
            <div class="w-full h-10 bg-[#00bfff] flex justify-between">
                <h1 class="text-xl text-[#ffa07a] p-2 "><%=contact.name%></h1>
                <h1 class="text-xl text-[#ffa07a] p-2"><%=contact.mobilenumber%></h1>
                <a class="text-xl text-[#ffa07a] p-2" href="/editcontact/<%=contact._id%>">edit</a>
                <a class="text-xl text-[#ffa07a] p-2"href="/deletecontact/<%=contact._id%>">delete</a>
            </div>
            <%})%>
        </div>
        </div>
</body>
</html>